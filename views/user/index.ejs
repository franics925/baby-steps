        <tr>
        <th scope="col">DOB</th>
        <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        <% user.child.forEach(function(c) { %>
            <tr>
                <td><%= c.DOB %></td>
                <td><%= c.name %></td>
                <td><a href="/user/child/<%= user._id %>"></a></td>
            </tr>
        <% }); %>
